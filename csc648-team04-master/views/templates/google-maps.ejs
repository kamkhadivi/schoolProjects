    Google maps snippet to be placed in the display_issue.ejs page.
-->

<!DOCTYPE html>
<html>
<head>
    <title>Issue Location</title>
    <meta name="viewport" content="initial-scale=1.0">
    <meta charset="utf-8">
    <style>
        /* Always set the map height explicitly to define the size of the div
         * element that contains the map. */
        #map {
            height: 100%;
            width: 100%;
            margin-left: auto;
            margin-right: auto;
            border-radius: 15px;
        }
        /* Optional: Makes the sample page fill the window. */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

    </style>
</head>
<body>
<div id="map" class="issue-info"></div>
<script>
    var map;
    function initMap() {
        lat_ = <%=data[0].latitude%>
        long_ = <%=data[0].longitude%>
        map = new google.maps.Map(document.getElementById('map'), {
            center: {lat: lat_, lng: long_},
            zoom: 15
        });

        marker = new google.maps.Marker({
            position: {lat: lat_, lng: long_},
            map: map,
            title: 'Issue Location'
        })
    }
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyABYQ3l89zm1uFz95T1gJQFEbwKAkzMV3Q&callback=initMap"
        async defer></script>
</body>
</html>
